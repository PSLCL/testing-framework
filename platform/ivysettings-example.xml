<ivysettings>
	<!-- Change the value to the checkout directory and rename file to ivysettings.xml. -->
	<property name="dtf.dir" value="DEFAULT"/>
	<settings defaultResolver="default" />
	<include url="${ivy.default.settings.dir}/ivysettings-public.xml"/>
	<caches  defaultCacheDir="${dtf.dir}/platform/.cache" checkUpToDate="false" ivyPattern="[organisation]/[module]/[revision]/ivy(.[platform]).xml" artifactPattern="[organisation]/[module]/[revision](/[platform])/[type]s/[artifact].[ext]"/>
	<resolvers>
		<filesystem name="local" descriptor="required">
			<ivy pattern="${dtf.dir}/portal/repo/[organisation]/[module]/[revision]/ivy(.[platform]).xml"/>
			<artifact pattern="${dtf.dir}/portal/repo/[organisation]/[module]/[revision](/[platform])/[type]s/[artifact].[ext]"/>
		</filesystem>
    <chain name="default" returnFirst="true">
      <resolver ref="local"/>
      <resolver ref="public"/>
    </chain>
	</resolvers>
</ivysettings>
