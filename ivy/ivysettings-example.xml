<ivysettings>
  <property name="dtf.dir" value="${ivy.settings.dir}/.."/>
  <settings defaultResolver="local" />
  <caches  defaultCacheDir="${dtf.dir}/ivy/repo" checkUpToDate="false" ivyPattern="[organisation]/[module]/[revision]/ivy(.[platform]).xml" artifactPattern="[organisation]/[module]/[revision](/[platform])/[type]s/[artifact].[ext]"/>
  <resolvers>
    <filesystem name="local" descriptor="required">
      <ivy pattern="${dtf.dir}/portal/repo/[organisation]/[module]/[revision]/ivy(.[platform]).xml"/>
      <artifact pattern="${dtf.dir}/portal/repo/[organisation]/[module]/[revision](/[platform])/[type]s/[artifact].[ext]"/>
    </filesystem>
  </resolvers>
</ivysettings>
